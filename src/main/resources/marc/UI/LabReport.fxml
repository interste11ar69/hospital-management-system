<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700.0" prefWidth="990.0" stylesheets="@../../css/LabReport.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="marc.Controllers.PatientLabReportManagementController">

    <children>
        <!-- Patient Lab Report Management Panel -->
        <VBox fx:id="PatientLabReportPanel" alignment="TOP_CENTER" prefHeight="700.0" prefWidth="990.0" spacing="8.0">

            <!-- Title -->
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Patient Lab Report Management" />

            <!-- Search Bar -->
            <HBox alignment="CENTER_LEFT" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="38.0" prefWidth="938.0" spacing="10.0">
                <TextField fx:id="searchLabReportField" prefWidth="500.0" promptText="Search by Patient Register ID, Lab Test ID, Employee ID, or Patient Name..." />
            </HBox>

            <!-- Table for Patient Lab Reports -->
            <TableView fx:id="labReportTable" editable="true" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="940.0">
                <columns>
                    <TableColumn fx:id="colPatientLabReportID" prefWidth="100.0" text="Report ID" />
                    <TableColumn fx:id="colLabPatientRegisterID" prefWidth="120.0" text="Patient Register ID" />
                    <TableColumn fx:id="colPatientName" prefWidth="150.0" text="Patient Name" />
                    <TableColumn fx:id="colLabTestID" prefWidth="100.0" text="Lab Test ID" />
                    <TableColumn fx:id="colLabTestName" prefWidth="142.0" text="Lab Test Name" />
                    <TableColumn fx:id="colEmployeeID" prefWidth="84.0" text="Employee ID" />
                    <TableColumn fx:id="colEmployeeName" prefWidth="124.0" text="Employee Name" />
                    <TableColumn fx:id="colResult" prefWidth="200.0" text="Result" />
                </columns>
            </TableView>

            <!-- Form for Add/Edit Lab Report -->
            <Label style="-fx-font-size: 18px; -fx-font-weight: bold;" text="Add or Edit Patient Lab Report" />

            <!-- Patient Register ID and Lab Test ID Dropdowns -->
            <HBox alignment="CENTER" spacing="10.0">
                <Label style="-fx-font-size: 14px; -fx-font-weight: normal;" text="Patient:" />
                <ComboBox fx:id="patientRegisterDropdown" prefWidth="240.0" promptText="Select Patient Register ID" />

                <Label style="-fx-font-size: 14px; -fx-font-weight: normal;" text="Lab Test:" />
                <ComboBox fx:id="labTestDropdown" prefWidth="240.0" promptText="Select Lab Test ID" />
            </HBox>

            <!-- Employee Selection -->
            <HBox alignment="CENTER" spacing="10.0">
                <Label style="-fx-font-size: 14px; -fx-font-weight: normal;" text="Employee:" />
                <ComboBox fx:id="employeeDropdown" prefWidth="300.0" promptText="Select Employee" />
            </HBox>

            <!-- CRUD Buttons -->
            <HBox alignment="CENTER" spacing="10.0">
                <Button fx:id="submitLabReportButton" onAction="#handleSubmitLabReport" prefWidth="120.0" text="Submit" />
                <Button fx:id="updateLabReportButton" onAction="#handleUpdateLabReport" prefWidth="120.0" text="Update" />
                <Button fx:id="deleteLabReportButton" onAction="#handleDeleteLabReport" prefWidth="120.0" text="Delete" />
            </HBox>

            <!-- Result Field -->
            <HBox alignment="CENTER" prefHeight="50.0" spacing="10.0">
                <Label style="-fx-font-size: 14px; -fx-font-weight: normal;" text="Result:" />
                <TextField fx:id="resultField" maxWidth="500.0" minWidth="500.0" prefWidth="500.0" promptText="Enter Result" />
            </HBox>

        </VBox>
    </children>
</AnchorPane>
