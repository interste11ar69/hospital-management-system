<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.CheckBox?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700.0" prefWidth="990.0" stylesheets="@../../css/PatientDisease.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="marc.Controllers.PatientDiseaseManagementController">

    <children>
        <!-- Patient Disease Management Panel -->
        <VBox fx:id="patientDiseasePanel" alignment="TOP_CENTER" prefHeight="700.0" prefWidth="990.0" spacing="8.0">

            <!-- Title -->
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Patient Disease Management" />

            <!-- Search Section -->
            <HBox alignment="CENTER_LEFT" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="950.0" spacing="10.0">
                <TextField fx:id="searchDiseaseField" prefWidth="500.0" promptText="Search Patient Disease" />
            </HBox>

            <!-- TableView for displaying patient diseases -->
            <TableView fx:id="patientdiseaseTable" editable="true" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="300.0" prefWidth="950.0">
                <columns>
                    <TableColumn fx:id="colPatientRegisterIDDisease" prefWidth="180.0" text="Patient Register ID" />
                    <TableColumn fx:id="colPatientRegisterName" prefWidth="150.0" text="Patient Name" />
                    <TableColumn fx:id="colDiseaseID" prefWidth="150.0" text="Disease ID" />
                    <TableColumn fx:id="colDiseaseName" prefWidth="150.0" text="Disease Name" />
                    <TableColumn fx:id="colIsActiveDisease" prefWidth="100.0" text="Is Active" />
                    <TableColumn fx:id="colCreatedOnDisease" prefWidth="140.0" text="Created On" />
                    <TableColumn fx:id="colModifiedOnDisease" prefWidth="140.0" text="Modified On" />
                </columns>
            </TableView>

            <!-- Input Fields for Adding or Updating Patient Disease -->
            <HBox alignment="CENTER" spacing="10.0">
                <Label style="-fx-font-size: 12px; -fx-font-weight: normal;" text="Patient Register:" />
                <ComboBox fx:id="patientRegisterIDComboBox" prefWidth="240.0" promptText="Select Patient " />
                <Label style="-fx-font-size: 12px; -fx-font-weight: normal;" text="Disease:" />
                <ComboBox fx:id="diseaseComboBox" prefWidth="240.0" promptText="Select Disease" />
                <CheckBox fx:id="isActiveDiseaseCheckBox" selected="true" text="Is Active" />
            </HBox>

            <!-- Buttons for Add, Update, and Delete -->
            <HBox alignment="CENTER" spacing="10.0">
                <Button fx:id="handleSubmitPatientDisease" onAction="#handleSubmitPatientDisease" prefWidth="120.0" text="Add" />
                <Button fx:id="handleUpdatePatientDisease" onAction="#handleUpdatePatientDisease" prefWidth="120.0" text="Update" />
                <Button fx:id="handleDeletePatientDisease" onAction="#handleDeletePatientDisease" prefWidth="120.0" text="Delete" />
            </HBox>

        </VBox>
    </children>
</AnchorPane>
