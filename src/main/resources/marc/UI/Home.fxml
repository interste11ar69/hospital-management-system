<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Label?>
<?import javafx.scene.control.Tab?>
<?import javafx.scene.control.TabPane?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<VBox fx:id="homePanel" spacing="20.0" stylesheets="@../../css/industrial_theme.css"
      xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="marc.Controllers.HomeController">

    <!-- 1. DASHBOARD METRICS -->
    <HBox spacing="20.0">
        <VBox styleClass="dashboard-card" HBox.hgrow="ALWAYS">
            <Label text="TOTAL PATIENTS" styleClass="card-title"/>
            <Label text="1,204" styleClass="card-value"/>
            <Label text="+5% from last month" textFill="#10b981" style="-fx-font-size: 11px;"/>
        </VBox>

        <VBox styleClass="dashboard-card" HBox.hgrow="ALWAYS">
            <Label text="ACTIVE STAFF" styleClass="card-title"/>
            <Label text="42" styleClass="card-value"/>
            <Label text="Doctors &amp; Nurses" textFill="#94a3b8" style="-fx-font-size: 11px;"/>
        </VBox>

        <VBox styleClass="dashboard-card" HBox.hgrow="ALWAYS">
            <Label text="APPOINTMENTS" styleClass="card-title"/>
            <Label text="18" styleClass="card-value"/>
            <Label text="3 Urgent" textFill="#ef4444" style="-fx-font-size: 11px;"/>
        </VBox>

        <VBox styleClass="dashboard-card" HBox.hgrow="ALWAYS">
            <Label text="BED OCCUPANCY" styleClass="card-title"/>
            <Label text="85%" styleClass="card-value"/>
            <Label text="Ward A is full" textFill="#f59e0b" style="-fx-font-size: 11px;"/>
        </VBox>
    </HBox>

    <!-- 2. DATA TABS -->
    <VBox VBox.vgrow="ALWAYS" spacing="10">
        <Label text="Hospital Records" styleClass="header-label" style="-fx-font-size: 18px;"/>

        <TabPane tabClosingPolicy="UNAVAILABLE" VBox.vgrow="ALWAYS" styleClass="tab-pane">
            <tabs>
                <!-- EMPLOYEES TAB -->
                <Tab text="Staff Directory">
                    <content>
                        <AnchorPane styleClass="tab-content-area">
                            <TableView fx:id="employeeInfoTable" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                                <columns>
                                    <TableColumn fx:id="colEmployeeIDEmployeeInfo" text="ID" prefWidth="60"/>
                                    <TableColumn fx:id="colFirstNameEmployeeInfo" text="First Name" prefWidth="120"/>
                                    <TableColumn fx:id="colLastNameEmployeeInfo" text="Last Name" prefWidth="120"/>
                                    <TableColumn fx:id="colGenderEmployeeInfo" text="Gender" prefWidth="80"/>
                                    <TableColumn fx:id="colDateOfBirthEmployeeInfo" text="DOB" prefWidth="100"/>
                                    <TableColumn fx:id="colPhoneNumberEmployeeInfo" text="Phone" prefWidth="120"/>
                                    <TableColumn fx:id="colRoleEmployeeInfo" text="Role" prefWidth="100"/>
                                    <TableColumn fx:id="colDepartmentEmployeeInfo" text="Department" prefWidth="120"/>
                                </columns>
                                <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                </columnResizePolicy>
                            </TableView>
                        </AnchorPane>
                    </content>
                </Tab>

                <!-- ACTIVE PATIENTS TAB -->
                <Tab text="Active In-Patients">
                    <content>
                        <AnchorPane styleClass="tab-content-area">
                            <TableView fx:id="activePatientTable" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                                <columns>
                                    <TableColumn fx:id="colPatientIDActivePatient" text="ID" prefWidth="60"/>
                                    <TableColumn fx:id="colFirstNameActivePatient" text="First Name" prefWidth="120"/>
                                    <TableColumn fx:id="colLastNameActivePatient" text="Last Name" prefWidth="120"/>
                                    <TableColumn fx:id="colDateOfBirthActivePatient" text="DOB" prefWidth="100"/>
                                    <TableColumn fx:id="colGenderActivePatient" text="Gender" prefWidth="80"/>
                                    <TableColumn fx:id="colPhoneNumberActivePatient" text="Phone" prefWidth="120"/>
                                    <TableColumn fx:id="colBloodGroupActivePatient" text="Blood Group" prefWidth="80"/>
                                </columns>
                                <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                </columnResizePolicy>
                            </TableView>
                        </AnchorPane>
                    </content>
                </Tab>

                <!-- APPOINTMENTS TAB -->
                <Tab text="Appointments">
                    <content>
                        <AnchorPane styleClass="tab-content-area">
                            <TableView fx:id="patientAppointmentsTable" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                                <columns>
                                    <TableColumn fx:id="colPatientIDPatientAppointment" text="Patient ID" />
                                    <TableColumn fx:id="colFirstNamePatientAppointment" text="First Name" />
                                    <TableColumn fx:id="colLastNamePatientAppointment" text="Last Name" />
                                    <TableColumn fx:id="colAppointmentDatePatientAppointment" text="Date/Time" />
                                    <TableColumn fx:id="colAppointmentStatusPatientAppointment" text="Status" />
                                </columns>
                                <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                </columnResizePolicy>
                            </TableView>
                        </AnchorPane>
                    </content>
                </Tab>

                <!-- ATTENDANTS TAB -->
                <Tab text="Attendants">
                    <content>
                        <AnchorPane styleClass="tab-content-area">
                            <TableView fx:id="patientAttendantsTable" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                                <columns>
                                    <TableColumn fx:id="colPatientIDPatientAttendant" text="Patient ID" />
                                    <TableColumn fx:id="colFirstNamePatientAttendant" text="Patient First Name" />
                                    <TableColumn fx:id="colLastNamePatientAttendant" text="Patient Last Name" />
                                    <TableColumn fx:id="colEmployeeIDPatientAttendant" text="Emp ID" />
                                    <TableColumn fx:id="colEmployeeNumberPatientAttendant" text="Emp Number" />
                                    <TableColumn fx:id="colAttendantFirstNamePatientAttendant" text="Attendant First" />
                                    <TableColumn fx:id="colAttendantLastNamePatientAttendant" text="Attendant Last" />
                                </columns>
                                <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                </columnResizePolicy>
                            </TableView>
                        </AnchorPane>
                    </content>
                </Tab>

                <!-- DISEASE HISTORY TAB -->
                <Tab text="Disease History">
                    <content>
                        <AnchorPane styleClass="tab-content-area">
                            <TableView fx:id="patientDiseaseHistoryTable" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                                <columns>
                                    <TableColumn fx:id="colPatientRegisterIDPatientDiseaseHistory" text="Reg ID" />
                                    <TableColumn fx:id="colFirstNamePatientDiseaseHistory" text="First Name" />
                                    <TableColumn fx:id="colLastNamePatientDiseaseHistory" text="Last Name" />
                                    <TableColumn fx:id="colDiseaseNamePatientDiseaseHistory" text="Disease" />
                                    <TableColumn fx:id="colAdmissionDatePatientDiseaseHistory" text="Admission" />
                                    <TableColumn fx:id="colDischargeDatePatientDiseaseHistory" text="Discharge" />
                                </columns>
                                <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                </columnResizePolicy>
                            </TableView>
                        </AnchorPane>
                    </content>
                </Tab>

                <!-- LAB RESULTS TAB -->
                <Tab text="Lab Results">
                    <content>
                        <AnchorPane styleClass="tab-content-area">
                            <TableView fx:id="patientLabResultsTable" AnchorPane.topAnchor="0.0" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0">
                                <columns>
                                    <TableColumn fx:id="colPatientIDPatientLabResults" text="Reg ID" />
                                    <TableColumn fx:id="colFirstNamePatientLabResults" text="First Name" />
                                    <TableColumn fx:id="colLastNamePatientLabResults" text="Last Name" />
                                    <TableColumn fx:id="colTestNamePatientLabResults" text="Test Name" />
                                    <TableColumn fx:id="colResultPatientLabResults" text="Result" />
                                    <TableColumn fx:id="colTestDatePatientLabResults" text="Date" />
                                </columns>
                                <columnResizePolicy>
                                    <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                                </columnResizePolicy>
                            </TableView>
                        </AnchorPane>
                    </content>
                </Tab>
            </tabs>
        </TabPane>
    </VBox>
</VBox>