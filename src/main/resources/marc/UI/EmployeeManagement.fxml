<?xml version="1.0" encoding="UTF-8"?>

<?import java.lang.String?>
<?import javafx.collections.FXCollections?>
<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ComboBox?>
<?import javafx.scene.control.DatePicker?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TableColumn?>
<?import javafx.scene.control.TableView?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.AnchorPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.VBox?>

<AnchorPane prefHeight="700.0" prefWidth="990.0" stylesheets="@../../css/EmployeeM.css" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="marc.Controllers.EmployeeManagementController">

    <children>
        <!-- Employee Management Panel -->
        <VBox fx:id="employeePanel" alignment="TOP_CENTER" prefHeight="700.0" prefWidth="990.0" spacing="8.0">

            <!-- Title -->
            <HBox alignment="CENTER" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="40.0" prefWidth="233.0">
                <Label prefHeight="36.0" prefWidth="400.0" style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Employee Management" />
            </HBox>
            <Label prefHeight="30.0" prefWidth="220.0" style="-fx-font-size: 14px;" text="Manage Employee Details Here." />

            <!-- Search Bar -->
            <HBox alignment="CENTER_LEFT" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="25.0" prefWidth="949.0" spacing="10.0">
                <TextField fx:id="searchEmployeeField" alignment="TOP_LEFT" prefHeight="25.0" prefWidth="579.0" promptText="Search employees..." />
            </HBox>

            <!-- Table View for Employees -->
            <TableView fx:id="employeeTable" editable="true" maxWidth="-Infinity" minWidth="-Infinity" prefHeight="500.0" prefWidth="950.0">
                <columns>
                    <TableColumn fx:id="colEmployeeNumber" prefWidth="128.0" text="Employee Number" />
                    <TableColumn fx:id="colFirstName" prefWidth="125.0" text="First Name" />
                    <TableColumn fx:id="colLastName" prefWidth="130.0" text="Last Name" />
                    <TableColumn fx:id="colEmail" prefWidth="130.0" text="Email" />
                    <TableColumn fx:id="colRole" prefWidth="130.0" text="Role" />
                    <TableColumn fx:id="colDepartment" prefWidth="130.0" text="Department" />
                    <TableColumn fx:id="colGender" prefWidth="60.0" text="Gender" />
                    <TableColumn fx:id="colDateOfBirth" prefWidth="108.0" text="Date of Birth" />
                </columns>
            </TableView>

            <!-- Buttons for Employee Actions -->
            <HBox alignment="CENTER" spacing="10.0">
                <Button fx:id="btnRegisterEmployee" onAction="#showRegisterEmployeePanel" prefWidth="180.0" text="Register New Employee" />
                <Button fx:id="btnUpdateEmployee" onAction="#editEmployee" prefWidth="140.0" text="Update Employee" />
                <Button fx:id="btnDeleteEmployee" onAction="#handleDeleteEmployee" prefWidth="140.0" text="Delete Employee" />
            </HBox>
        </VBox>

        <!-- Register Employee Panel -->
        <VBox fx:id="registerEmployeePanel" alignment="CENTER" prefHeight="700.0" prefWidth="990.0" spacing="10.0" visible="false">
            <!-- Title -->
            <Label style="-fx-font-size: 20px; -fx-font-weight: bold;" text="Register or Edit Employee" />

            <!-- Form Fields for Employee Details -->
            <TextField fx:id="firstNameField" prefWidth="400.0" promptText="First Name" />
            <TextField fx:id="lastNameField" prefWidth="400.0" promptText="Last Name" />
            <TextField fx:id="emailField" prefWidth="400.0" promptText="Email" />
            <TextField fx:id="phoneNumberField" prefWidth="400.0" promptText="Phone Number" />

            <!-- Gender Dropdown -->
            <HBox alignment="CENTER" spacing="10.0">
                <Label text="Gender:" style="-fx-font-size: 14px; -fx-font-weight: normal;"/>
                <ComboBox fx:id="genderDropdown" prefWidth="400.0" promptText="Select Gender">
                    <items>
                        <FXCollections fx:factory="observableArrayList">
                            <String fx:value="Male" />
                            <String fx:value="Female" />
                        </FXCollections>
                    </items>
                </ComboBox>
            </HBox>

            <!-- Date of Birth -->
            <HBox alignment="CENTER" spacing="10.0">
                <Label text="Date of Birth:" style="-fx-font-size: 14px; -fx-font-weight: normal;"/>
                <DatePicker fx:id="dateOfBirthPicker" prefWidth="400.0" promptText="Select Date of Birth" />
            </HBox>

            <!-- Role Dropdown -->
            <HBox alignment="CENTER" spacing="10.0">
                <Label text="Role:" style="-fx-font-size: 14px; -fx-font-weight: normal;"/>
                <ComboBox fx:id="roleDropdown" prefWidth="400.0" promptText="Select Role" />
            </HBox>

            <!-- Department Dropdown -->
            <HBox alignment="CENTER" spacing="10.0">
                <Label text="Department:" style="-fx-font-size: 14px; -fx-font-weight: normal;"/>
                <ComboBox fx:id="departmentDropdown" prefWidth="400.0" promptText="Select Department" />
            </HBox>

            <!-- Buttons -->
            <HBox alignment="CENTER" spacing="10.0">
                <Button fx:id="submitButton" onAction="#handleSubmit" prefWidth="120.0" text="Submit" />
                <Button fx:id="btnBack" onAction="#showEmployeePanel" prefWidth="120.0" text="Back" />
            </HBox>
        </VBox>

    </children>
</AnchorPane>
